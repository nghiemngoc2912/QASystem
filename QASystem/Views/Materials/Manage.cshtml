@model QASystem.ViewModels.MaterialListViewModel

<h2>Manage Materials</h2>

<div class="mb-3">
    <a asp-action="AddMaterial" class="btn btn-success">Add New Material</a>
</div>

<form asp-action="Manage" method="get" class="mb-3">
    <div class="input-group" style="max-width: 400px;">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search by title or description" value="@Model.SearchTerm" />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Manage" class="btn btn-secondary">Clear</a>
    </div>
    <input type="hidden" name="sortOrder" value="@Model.SortOrder" />
    <input type="hidden" name="pageNumber" value="1" />
</form>

<div class="mb-3">
    Sort by Created Date:
    <a asp-action="Manage" asp-route-searchTerm="@Model.SearchTerm" asp-route-sortOrder="desc" asp-route-pageNumber="1" class="btn btn-sm btn-outline-primary @(Model.SortOrder == "desc" ? "active" : "")">Newest First</a>
    <a asp-action="Manage" asp-route-searchTerm="@Model.SearchTerm" asp-route-sortOrder="asc" asp-route-pageNumber="1" class="btn btn-sm btn-outline-primary @(Model.SortOrder == "asc" ? "active" : "")">Oldest First</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th style="width: 15%;">Title</th>
            <th style="width: 30%;">Description</th>
            <th style="width: 15%;">Created At</th>
            <th style="width: 10%;">File</th>
            <th style="width: 10%;">Downloads</th>
            <th style="width: 20%;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Materials.Any())
        {
            @foreach (var material in Model.Materials)
            {
                <tr>
                    <td class="text-truncate" title="@material.Title">@material.Title</td>
                    <td class="description-col" title="@material.Description">@material.Description</td>
                    <td>@material.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <a asp-action="Download" asp-route-id="@material.MaterialId" class="btn btn-sm btn-outline-success" target="_blank">View File</a>
                    </td>
                    <td>@material.Downloads</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@material.MaterialId" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@material.MaterialId" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@material.MaterialId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this material?')">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No materials found.</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Manage" asp-route-searchTerm="@Model.SearchTerm" asp-route-sortOrder="@Model.SortOrder" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                    <a class="page-link" asp-action="Manage" asp-route-searchTerm="@Model.SearchTerm" asp-route-sortOrder="@Model.SortOrder" asp-route-pageNumber="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Manage" asp-route-searchTerm="@Model.SearchTerm" asp-route-sortOrder="@Model.SortOrder" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
            </li>
        </ul>
    </nav>
}

<style>
    .table {
        table-layout: fixed;
    }

    .description-col {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    .table th, .table td {
        vertical-align: middle;
        word-wrap: break-word;
    }

    .text-truncate {
        max-width: 100%;
    }
</style>